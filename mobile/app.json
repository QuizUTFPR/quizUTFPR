{
  "expo": {
    "name": "Quiz UTFPR",
    "slug": "mobile",
    "version": "1.0.0",
    "scheme": "quizutfpr",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "platforms": [
      "ios", 
      "android"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "backgroundColor": "#EEBB24",
      "resizeMode": "cover"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.utfpr.quizutfpr"
    },
    "android": {
      "package": "com.utfpr.quizutfpr",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    }
  }
}
